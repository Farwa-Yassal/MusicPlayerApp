<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_blue"
    tools:context=".MainActivity">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_marginTop="40dp"
        tools:ignore="MissingConstraints">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="match_parent"
                android:paddingHorizontal="50dp"
                android:paddingBottom="30dp">

                <TextView
                    android:id="@+id/textPlay"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_gravity="fill_horizontal"
                    android:layout_marginTop="48dp"
                    android:layout_marginBottom="8dp"
                    android:fontFamily="@font/poiret"
                    android:gravity="center"
                    android:text="@string/Play_Music"
                    android:textColor="@color/black"
                    android:textSize="40sp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toTopOf="@+id/button14"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toEndOf="@+id/button23"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/button"
                    app:layout_constraintVertical_bias="0.5"
                    tools:ignore="MissingConstraints" />

                <Button
                    android:id="@+id/btn1"
                    android:layout_width="match_parent"
                    android:layout_height="75dp"
                    android:layout_marginTop="1dp"
                    android:layout_marginBottom="9dp"
                    android:text="“Amazing Grace” - Various Artists"
                    android:textColor="@color/white"
                    app:backgroundTint="@color/blue"
                    app:layout_constraintBottom_toTopOf="@+id/button14"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toEndOf="@+id/button12"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textPlay"
                    app:layout_constraintVertical_bias="0.5"
                    android:onClick="True"
                    android:longClickable="true"
                    tools:ignore="MissingConstraints" />

                <Button
                    android:id="@+id/btn2"
                    android:layout_width="match_parent"
                    android:layout_height="75dp"
                    android:layout_marginTop="1dp"
                    android:layout_marginBottom="9dp"
                    android:onClick="True"
                    android:longClickable="true"
                    android:text="“Somewhere Over the Rainbow” - Judy Garland"
                    android:textColor="@color/white"
                    app:backgroundTint="@color/blue"
                    app:layout_constraintBottom_toTopOf="@+id/button"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toEndOf="@+id/button7"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/button7"
                    app:layout_constraintVertical_bias="0.5"
                    tools:ignore="MissingConstraints" />

                <Button
                    android:id="@+id/btn3"
                    android:layout_width="match_parent"
                    android:onClick="True"
                    android:longClickable="true"
                    android:layout_height="75dp"
                    android:layout_marginTop="1dp"
                    android:layout_marginBottom="9dp"
                    android:text="“You Are My Sunshine” - Jimmie Davis"
                    android:textColor="@color/white"
                    app:backgroundTint="@color/blue"
                    app:layout_constraintBottom_toTopOf="@+id/button13"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/button12"
                    app:layout_constraintVertical_bias="0.5"
                    tools:ignore="MissingConstraints" />

                <Button
                    android:id="@+id/btn4"
                    android:layout_width="match_parent"
                    android:onClick="True"
                    android:longClickable="true"
                    android:layout_height="75dp"
                    android:layout_marginTop="2dp"
                    android:layout_marginBottom="9dp"
                    android:text="“Oh My Darling, Clementine”"
                    android:textColor="@color/white"
                    app:backgroundTint="@color/blue"
                    app:layout_constraintBottom_toTopOf="@+id/button21"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toEndOf="@+id/button16"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/button16"
                    app:layout_constraintVertical_bias="0.5"
                    tools:ignore="MissingConstraints" />

                <Button
                    android:id="@+id/btn5"
                    android:layout_width="match_parent"
                    android:onClick="True"
                    android:longClickable="true"
                    android:layout_height="75dp"
                    android:layout_marginTop="2dp"
                    android:layout_marginBottom="8dp"
                    android:text="“Oh! Susanna”"
                    android:textColor="@color/white"
                    app:backgroundTint="@color/blue"
                    app:layout_constraintBottom_toTopOf="@+id/button20"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toEndOf="@+id/button17"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/button17"
                    app:layout_constraintVertical_bias="0.5"
                    tools:ignore="MissingConstraints" />

                <Button
                    android:id="@+id/btn6"
                    android:layout_width="match_parent"
                    android:onClick="True"
                    android:longClickable="true"
                    android:layout_height="75dp"
                    android:layout_marginTop="2dp"
                    android:layout_marginBottom="9dp"
                    android:text="“Yankee Doodle”"
                    android:textColor="@color/white"
                    app:backgroundTint="@color/blue"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toEndOf="@+id/button21"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/button20"
                    app:layout_constraintVertical_bias="0.5"
                    tools:ignore="MissingConstraints" />

                <Button
                    android:id="@+id/btn7"
                    android:layout_width="match_parent"
                    android:onClick="True"
                    android:longClickable="true"
                    android:layout_height="75dp"
                    android:layout_marginTop="1dp"
                    android:layout_marginBottom="9dp"
                    android:text="“Somewhere Over the Rainbow”"
                    android:textColor="@color/white"
                    app:backgroundTint="@color/blue"
                    app:layout_constraintBottom_toTopOf="@+id/button23"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toEndOf="@+id/button19"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/button19"
                    app:layout_constraintVertical_bias="0.5"
                    tools:ignore="MissingConstraints" />

                <Button
                    android:id="@+id/btn8"
                    android:layout_width="match_parent"
                    android:onClick="True"
                    android:longClickable="true"
                    android:layout_height="75dp"
                    android:layout_marginTop="1dp"
                    android:text="“This Land Is Your Land”"
                    android:textColor="@color/white"
                    app:backgroundTint="@color/blue"
                    app:layout_constraintBottom_toTopOf="@+id/button17"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="1.0"
                    app:layout_constraintStart_toEndOf="@+id/button20"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/button18"
                    app:layout_constraintVertical_bias="0.5"
                    tools:ignore="MissingConstraints" />

                <Button
                    android:id="@+id/btn9"
                    android:layout_width="match_parent"
                    android:onClick="True"
                    android:longClickable="true"
                    android:layout_height="75dp"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="8dp"
                    android:text="“Singing in the Rain” - Gene Kelly"
                    android:textColor="@color/white"
                    app:backgroundTint="@color/blue"
                    app:layout_constraintBottom_toTopOf="@+id/button12"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toEndOf="@+id/button"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.5"
                    tools:ignore="MissingConstraints" />

                <Button
                    android:id="@+id/btn10"
                    android:layout_width="match_parent"
                    android:onClick="True"
                    android:longClickable="true"
                    android:layout_height="75dp"
                    android:layout_marginTop="1dp"
                    android:layout_marginBottom="8dp"
                    android:text="“Moon River” - Henry Mancini and Johnny Mercer or Andy Williams"
                    android:textColor="@color/white"
                    app:backgroundTint="@color/blue"
                    app:layout_constraintBottom_toTopOf="@+id/button15"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toEndOf="@+id/button13"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/button13"
                    app:layout_constraintVertical_bias="0.5"
                    tools:ignore="MissingConstraints" />

                <Button
                    android:id="@+id/btn11"
                    android:layout_width="match_parent"
                    android:onClick="True"
                    android:longClickable="true"
                    android:layout_height="75dp"
                    android:layout_marginTop="2dp"
                    android:layout_marginBottom="9dp"
                    android:text="“I Want to Hold Your Hand” - The Beatles"
                    android:textColor="@color/white"
                    app:backgroundTint="@color/blue"
                    app:layout_constraintBottom_toTopOf="@+id/button16"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toEndOf="@+id/button14"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/button14"
                    app:layout_constraintVertical_bias="0.5"
                    tools:ignore="MissingConstraints" />

                <Button
                    android:id="@+id/btn12"
                    android:layout_width="match_parent"
                    android:onClick="True"
                    android:longClickable="true"
                    android:layout_height="75dp"
                    android:layout_marginTop="1dp"
                    android:layout_marginBottom="8dp"
                    android:text="“Stand by Me” - Ben E. King"
                    android:textColor="@color/white"
                    app:backgroundTint="@color/blue"
                    app:layout_constraintBottom_toTopOf="@+id/button18"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toEndOf="@+id/button15"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/button15"
                    app:layout_constraintVertical_bias="0.5"
                    tools:ignore="MissingConstraints" />

                <Button
                    android:id="@+id/btn13"
                    android:layout_width="match_parent"
                    android:onClick="True"
                    android:longClickable="true"
                    android:layout_height="75dp"
                    android:layout_marginTop="1dp"
                    android:layout_marginBottom="9dp"
                    android:text="“What a Wonderful World” - Louis Armstrong"
                    android:textColor="@color/white"
                    app:backgroundTint="@color/blue"
                    app:layout_constraintBottom_toTopOf="@+id/button19"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toEndOf="@+id/button18"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/button21"
                    app:layout_constraintVertical_bias="0.5"
                    tools:ignore="MissingConstraints" />
            </LinearLayout>
        </ScrollView>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
